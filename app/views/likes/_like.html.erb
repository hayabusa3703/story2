<div class="like-link" id="like-link-<%= story.id %>">
  <% if current_user.likes.find_by(story_id: story.id) %>
    <%= link_to unlike_path(story.id), method: :delete, remote: true do %>
      <div class="btn btn-default glyphicon glyphicon-heart" id="heart-<%= story.id %>">
        <div class = "aaa"><button type="button" class="glyphicon glyphicon-align-center">❤️<%= story.likes.count %></button> </div>
      </div>
    <% end %>
  <% else %>
    <%= link_to like_path(story.id), method: :post, remote: true do %>
      <div class="btn btn-default glyphicon glyphicon-heart-empty" id="heart-<%= story.id %>">
        <div class = "aaa"> <button type="button" class="btn btn-primary btn-lg btn-block">♡️<%= story.likes.count %></button>  </div>
      </div>
    <% end %>
  <% end %>
</div>